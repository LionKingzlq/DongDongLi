<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
      http://www.springframework.org/schema/security
      http://www.springframework.org/schema/security/spring-security-3.2.xsd ">

	<!-- 不需要进行安全认证的资源 -->
	<http pattern="/res/lib/My97DatePicker/skin/twoer" security="none" />
	<http pattern="/login.jsp" security="none" />
	<http pattern="/" security="none" />

	<!-- 资源所需要的权限 -->
	<http auto-config='true'>
		<form-login login-page="/login.jsp" default-target-url="/index.jsp" authentication-failure-url="/" />
		<logout logout-success-url="/index.jsp" />
		<!-- 尝试访问没有权限的页面时跳转的页面 -->
		<access-denied-handler error-page="/error-noauth.jsp" />
		<custom-filter ref="filterSecurityInterceptor" before="FILTER_SECURITY_INTERCEPTOR" />
	</http>
	
	<beans:bean id="filterSecurityInterceptor" class="com.ddl.security.MyFilterSecurotyInterceptor">
        <beans:property name="authenticationManager" ref="authenticationManager" />
        <beans:property name="accessDecisionManager" ref ="myAccessDecisionManager"/>
        <beans:property name="securityMetadataSource" ref="securityMetadataSource"/>
    </beans:bean>
    
    <!-- 认证管理器，实现用户认证的入口，主要实现userdetailsservice -->
    <authentication-manager alias="authenticationManager">
        <authentication-provider  user-service-ref="myUserDetailService"></authentication-provider>
    </authentication-manager>
    
    <beans:bean id="myUserDetailService" class="com.ddl.security.MyUserDetailsService" />
    <beans:bean id="myAccessDecisionManager" class="com.ddl.security.MyAccessDecisionManager" />
    <beans:bean id="securityMetadataSource" class="com.ddl.security.MySecurityMetadataSource"/>
    
    
</beans:beans>